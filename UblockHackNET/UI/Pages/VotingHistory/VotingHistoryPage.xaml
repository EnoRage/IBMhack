<?xml version="1.0" encoding="UTF-8"?>
<pages:BasePage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UnblockHackNET.UI.Pages.VotingHistory.VotingHistoryPage"
    xmlns:pages="clr-namespace:UnblockHackNET.UI.Pages"
    Title="Пожертвование">
     <ListView
        ItemTapped="Handle_ItemTapped"
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand"
        Margin="10,10,10,0"
        HasUnevenRows="true"
        IsPullToRefreshEnabled="true"
        RefreshCommand="{Binding RefreshCommand}"
        ItemsSource="{Binding RefreshChartItemSource}"
        IsRefreshing="{Binding IsRefreshing}">
        <ListView.Header>
            <StackLayout
                Margin="10,20,10,0">
                <Label
                    Text="Список организаций"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="30">
                </Label>
                <Label
                    Text="{Binding BalanceText}"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="30">
                </Label>
            </StackLayout>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Info}"
                           Detail="{Binding Balance}">
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</pages:BasePage>
